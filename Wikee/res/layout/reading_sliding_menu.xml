<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/SessionHistoryListView"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dip" >
    </ListView>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="1dip"
            android:layout_marginTop="1dip"
            android:background="?android:attr/dividerHorizontal"
            android:layout_alignParentTop="true"/>
        <Button
            android:id="@+id/BtnViewSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/view_session"
            android:layout_below="@id/seperator1" />
        <View
            android:id="@+id/seperator2"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="1dip"
            android:layout_marginTop="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_below="@id/BtnViewSession"
            android:background="?android:attr/dividerHorizontal"/>
        <Button
            android:id="@+id/BtnColorPickerOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@android:string/ok" 
            android:layout_below="@id/seperator2"/>
    </RelativeLayout>
